<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <!-- Medication Name -->
        <TextView
            android:id="@+id/medName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aspirin"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <!-- Dosage & Frequency -->
        <TextView
            android:id="@+id/medDosage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 tablet - Once daily"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="2dp"/>

        <!-- Time(s) -->
        <TextView
            android:id="@+id/medTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8:00 AM"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="4dp"/>

        <!-- Edit / Delete Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/editButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EDIT"
                android:textColor="@color/main_color"
                android:background="@drawable/button_outline_main"/>

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DELETE"
                android:textColor="#FD2D20"
                android:background="@drawable/button_outline_red"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>