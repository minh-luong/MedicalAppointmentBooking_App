<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_arrow_back"
        android:tint="@color/black"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="@id/titleText"
        app:layout_constraintBottom_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="UseAppTint" />

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Medication Reminder"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/form_add_reminder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/nameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Medication name"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"/>

            <EditText
                android:id="@+id/dosageInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dosage (e.g. 500mg)"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/timesPerDayInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Times per day (e.g. 3)"
                android:inputType="number"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginTop="12dp"/>

            <!-- Times section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reminder times"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="16dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/timeChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleLine="false"
                app:singleSelection="false"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/addTimeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Add time"
                android:background="#00000000"
                android:textColor="@color/main_color"
                android:layout_marginTop="8dp"/>

            <!-- Dates -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/startDateButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Start date"
                    android:textColor="@color/black"
                    android:background="@drawable/button_outline_main" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="1dp"/>

                <Button
                    android:id="@+id/endDateButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="End date"
                    android:textColor="@color/black"
                    android:background="@drawable/button_outline_main" />
            </LinearLayout>

            <TextView
                android:id="@+id/dateSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#555555"
                android:layout_marginTop="6dp"/>

            <EditText
                android:id="@+id/notesInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Notes (optional)"
                android:background="@drawable/edit_text_bg"
                android:minHeight="80dp"
                android:gravity="top|start"
                android:padding="12dp"
                android:layout_marginTop="12dp"/>

            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Reminder"
                android:background="@drawable/button_solid_main"
                android:textColor="#FFFFFF"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
